{
    "version": 2,
    "builds": [
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["../frontend/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
        "dest": "/frontend/$1"
      },
      {
         "src": "/(.*)",
         "dest": "/backend/server.js"
      }
    ],
    "installCommand": "cd backend && npm install"
  }